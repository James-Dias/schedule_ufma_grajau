<%= bootstrap_devise_error_messages! %>
<div class="card my-4">
  <div class="card-header">
    <h4>Cadastrar-se</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="row">
        <div class="form-group col-lg-7">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group col-lg-5">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-lg-4">
          <%= f.label :cpf %>
          <%= f.text_field :cpf, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group col-lg-4">
          <%= f.label :registration %>
          <%= f.text_field :registration, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group col-lg-4">
          <%= f.label :course %>
          <%= f.text_field :course, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :phone1 %>
          <%= f.text_field :phone1, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :phone2 %>
          <%= f.text_field :phone2, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <%= f.hidden_field :kind, :value => User.kinds.key(0) %>
      <div class="row">
        <div class="form-group col-lg-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group col-lg-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
