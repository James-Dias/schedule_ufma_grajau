<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @user.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:cpf) %></dt>
      <dd><pre class="prettyprint"><%= @user.cpf %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rg) %></dt>
      <dd><pre class="prettyprint"><%= @user.rg %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:registration) %></dt>
      <dd><pre class="prettyprint"><%= @user.registration %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @user.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone1) %></dt>
      <dd><pre class="prettyprint"><%= @user.phone1 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone2) %></dt>
      <dd><pre class="prettyprint"><%= @user.phone2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:kind) %></dt>
      <dd><pre class="prettyprint"><%= User.human_attribute_name(@user.kind) %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:course) %></dt>
      <dd><pre class="prettyprint"><%= @user.course %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @user.description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              users_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_user_path(@user), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              user_path(@user),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
